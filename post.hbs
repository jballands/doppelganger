{{!< default}}
              
<main class="main-header" role="banner">

    <article class="{{post_class}}">
        
        {{#post}}
        
        <div class="post_title-container">
            
            <div class="divider"></div>
            
            <div class="title">
                {{{title}}}
            </div>
            
            <div class="post_title-stats">
                <time class="date" datetime="{{date format="YYYY-MM-DD"}}">{{date format='MMMM DD, YYYY'}}</time>
                <a href="{{@blog.url}}"><span style="font-style:normal;font-size:18pt;">&#65513;</span> Return home</a>
            </div>
                
            <div class="divider"></div>
        </div>
        
        <section class="post_content">
            
            <div class="dot"></div>
            
            {{content}}
            
        </section>
        
        {{/post}}
        
    </article>

</main>